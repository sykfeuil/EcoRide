{% extends 'base.html.twig' %}

{% block title %}Inscription - EcoRide{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="container p-3 my-5 text-center">
        <h1 class="text-primary py-5">Créer un compte</h1>

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.username, {
                label: 'Nom d\'utilisateur'
            }) }}
            {{ form_row(registrationForm.email, {
                label: 'Adresse mail'
            }) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe'
            }) }}

            <button type="submit" class="btn btn-success text-light my-5">Créer un compte</button>
        {{ form_end(registrationForm) }}
    </div>
    
{% endblock %}
