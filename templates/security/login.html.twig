{% extends 'base.html.twig' %}

{% block title %}Connexion - EcoRide{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3 text-center">
                Vous êtes connecté avec {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
            </div>
        {% endif %}

        <div class="container p-3 my-5 text-center">
            <h1 class="mb-3 font-weight-normal text-primary">Connexion</h1>
            <label for="username">Adresse mail</label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control my-3" autocomplete="email" required autofocus>
            <br>
            <label for="password">Mot de passe</label>
            <input type="password" name="_password" id="password" class="form-control my-3" autocomplete="current-password" required>
            <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <input type="checkbox" name="_remember_me" id="_remember_me">
                    <label for="_remember_me">Remember me</label>
                </div>
            #}

            <button class="btn btn-success text-light my-5" type="submit">
                Connexion
            </button>
        </div>
    </form>
{% endblock %}
